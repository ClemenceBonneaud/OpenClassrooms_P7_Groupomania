}).catch(error => {\n          console.log(error);\n        });\n      }\n    },\n    publicationCheck: function () {\n      if (this.publication == true) {\n        return true;\n      }\n\n      return false;\n    },\n    supprimerArticle: function (titre) {\n      let confirmation = confirm(\"Êtes-vous certain de vouloir supprimer votre article ?\");\n\n      if (confirmation) {\n        console.log(\"titre : \" + titre);\n        /*const article = titre;\n         instance\n          .delete(`auth/delete/${user}`)\n          .then((response) => {\n            console.log(response);\n          })\n          .catch((error) => {\n            console.log(error);\n          });  */\n      }\n    }\n  },\n  components: {\n    HeaderHome\n  }\n};","map":{"version":3,"mappings":"AAmDA;AACA,OAAOA,UAAP,MAAuB,6BAAvB,C,CAEA;;AACA,MAAMC,KAAI,GAAIC,OAAO,CAAC,OAAD,CAArB;;AACA,MAAMC,QAAO,GAAIF,KAAK,CAACG,MAAN,CAAa;AAC5BC,SAAO,EAAE;AADmB,CAAb,CAAjB;AAIA,eAAe;AACbC,MAAI,EAAE,cADO;AAEbC,MAAI,EAAE,YAFO;AAGbC,OAAK,EAAE,CAAC,EAAD,CAHM;;AAIbC,MAAI,GAAG;AACL,WAAO;AACLC,WAAK,EAAE,QADF;AAELC,eAAS,EAAE,cAFN;AAGLC,YAAM,EAAE;AACNC,WAAG,EAAE,EADC;AAENC,cAAM,EAAE,EAFF;AAGNC,WAAG,EAAE;AAHC,OAHH;AAQLC,cAAQ,EAAE,EARL;AASLC,iBAAW,EAAE;AATR,KAAP;AAWD,GAhBY;;AAiBbC,SAAO,GAAG;AAER;AACA,UAAMC,IAAG,GAAI,KAAKC,MAAL,CAAYC,KAAZ,CAAkBC,MAA/B;AACAnB,YAAO,CACJoB,GADH,CACQ,cAAaJ,IAAK,EAD1B,EAEGK,IAFH,CAESC,QAAD,IAAc;AAClB,WAAKb,MAAL,CAAYC,GAAZ,GAAkBY,QAAQ,CAAChB,IAAT,CAAciB,SAAd,CAAwBC,QAA1C;AACA,WAAKf,MAAL,CAAYE,MAAZ,GAAqBW,QAAQ,CAAChB,IAAT,CAAciB,SAAd,CAAwBE,SAA7C;AACA,WAAKhB,MAAL,CAAYG,GAAZ,GAAkBU,QAAQ,CAAChB,IAAT,CAAciB,SAAd,CAAwBX,GAA1C;AACD,KANH,EAOGc,KAPH,CAOUC,KAAD,IAAW;AAChBC,aAAO,CAACC,GAAR,CAAYF,KAAZ;AACD,KATH,EAJQ,CAeR;;AACA3B,YAAO,CACJoB,GADH,CACQ,WAAUJ,IAAK,EADvB,EAEGK,IAFH,CAESC,QAAD,IAAc;AAClB,UAAIQ,IAAI,CAAR;;AACA,WAAKA,IAAI,CAAT,EAAYA,IAAIR,QAAQ,CAAChB,IAAT,CAAcyB,MAA9B,EAAsCD,KAAK,CAA3C,EAA8C;AAC5C,YAAIE,OAAM,GAAIV,QAAQ,CAAChB,IAAT,CAAcwB,CAAd,CAAd;AACA,YAAIG,OAAM,GAAID,OAAO,CAACE,SAAtB;AA