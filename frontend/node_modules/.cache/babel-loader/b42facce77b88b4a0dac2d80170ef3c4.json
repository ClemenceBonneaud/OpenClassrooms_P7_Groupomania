"bloc\">\n      <h3 v-if=\"!publicationCheck()\">\n        <!-- message en cas d'absence de publication -->\n        Cette personne n'a publié aucun article\n      </h3>\n      <h3>{{ article.titre }}</h3>\n      <p>{{ article.contenu }}</p>\n      <button v-if=\"publicationCheck()\" class=\"bouton\">Partager</button>\n    </div>\n  </div>\n</template>\n\n<!-- ////////////////////////////////////////////////// -->\n<!--                       SCRIPT                       -->\n<!-- ////////////////////////////////////////////////// -->\n\n<script>\n// Header\nimport HeaderHome from \"@/components/HeaderHome.vue\";\n\n// Axios\nconst axios = require(\"axios\");\nconst instance = axios.create({\n  baseURL: \"http://localhost:3000/api/\",\n});\n\nexport default {\n  name: \"ProfilOther\",\n  path: \"/profil/:id\",\n  props: [\"\"],\n  data() {\n    return {\n      titre: \"Profil de \",\n      sousTitre: \"Publications\",\n      profil: {\n        nom: \"\",\n        prenom: \"\",\n        job: \"\",\n      },\n      article: {\n        titre: \"\",\n        contenu: \"\",\n      },\n    };\n  },\n  mounted() {\n    // Remplissage des data avec les infos API\n\n    // Récupération de l'id\n    let url = window.location;\n    let urlString = url.toString();\n    let urlId = urlString.substring(urlString.lastIndexOf(\"/\") + 1);\n\n    instance\n      .get(`auth/infos/${urlId}`)\n      .then((response) => {\n        console.log(response);\n        this.profil.nom = response.data.userFound.lastName;\n        this.profil.prenom = response.data.userFound.firstName;\n        this.profil.job = response.data.userFound.job;\n      })\n      .catch((error) => {\n        console.log(error);\n      });\n  },\n  methods: {\n    partagerPublication() {\n      console.log(\"publié\"); //////////////////////////////////////////////////////////\n    },\n    publicationCheck: function () {\n      //////////////////////////////////////////////////////////\n      return false;\n    },\n  },\n  components: { HeaderHome },\n};\n</script>\n\n<!-- ////////////////////////////////////////////////// -->\n<!--                       STYLE                        -->\n<!-- ////////////////////////////////////////////////// -->\n\n<style lang=\"scss\">\n.profilEdit {\n  display: flex;\n  justify-content: space-evenly;\n  & a {\n    margin: 0;\n  }\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}